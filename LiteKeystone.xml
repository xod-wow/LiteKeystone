<Ui xmlns="http://www.blizzard.com/wow/ui/">

  <Script file="LiteKeystone.lua"/>

  <Frame name="LiteKeystoneInfo" parent="UIParent" hidden="true" framestrata="DIALOG">

    <Size x="600" y="500" />

    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>

    <Backdrop
      edgefile="Interface\DialogFrame\UI-DialogBox-Border"
      bgfile="Interface\Tooltips\UI-Tooltip-Background"
      tile="true">
      <EdgeSize val="16" />
      <TileSize val="16" />
      <BackgroundInsets>
        <AbsInset left="1" right="1" top="1" bottom="1" />
      </BackgroundInsets>
    </Backdrop>

    <Scripts>
      <OnLoad>
        self:SetBackdropColor(0, 0, 0, 1)
        tinsert(UISpecialFrames, self:GetName())
      </OnLoad>
    </Scripts>

    <Frames>

      <ScrollFrame parentKEy="Scroll" inherits="UIPanelScrollFrameTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" x="16" y="-16" />
          <Anchor point="BOTTOMRIGHT" x="-32" y="16" />
        </Anchors>

        <ScrollChild>
          <EditBox
                parentKey="Edit"
                multiline="true"
                maxletters="99999"
                enablemouse="true"
                autofocus="true">
            <Size x="620" y="495" />
            <Scripts>
              <OnLoad>
                self:SetSpacing(4)
                self:SetEnabled(false)
              </OnLoad>
            </Scripts>

            <FontString inherits="SystemFont_Med3" />
          </EditBox>
        </ScrollChild>
      </ScrollFrame>

      <Button parentKey="CloseButton" inherits="UIPanelCloseButton">
        <Anchors>
          <Anchor point="TOPRIGHT" x="0" y="25" />
        </Anchors>
      </Button>
  
    </Frames>
  </Frame>
        
</Ui>
